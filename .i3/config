        workspace_buttons yes
        position bottom
        #status_command py3status -b --config ~/.config/i3/status.conf
        status_command i3status --config ~/.config/i3/status.conf
        #status_command i3status
        colors {
            background "#111111"
            separator "#292929"
            statusline "#AAAAAA"

            # class             border    backgrd   text
            focused_workspace  "#522b0d" "#292929" "#ea7d24"
            active_workspace   "#292929" "#292929" "#AAAAAA"
            inactive_workspace "#292929" "#292929" "#AAAAAA"
            urgent_workspace   "#292929" "#e00000" "#FFFFFF"
        }
}

